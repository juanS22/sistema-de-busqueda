@page
@model Sistemadebusqueda2.Pages.UsuariosModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>
                Listado usuarios
            </h3>
        </div>
        <div class="col-md-6">
            <a asp-page="NuevoUsuario" class="btn btn-primary float-right"><i class="bi bi-person-plus"></i> Nuevo</a>
        </div>
        
    </div>
   
    
    <hr />
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre usuario
                        </th>
                        <th>
                            Nombres
                        </th>
                        <th>
                            Apellidos
                        </th>
                        <th>
                            Rol
                        </th>
                        <th>
                            Pais
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>
                                @usuario.id
                            </td>
                            <td>
                                @usuario.Usuario
                            </td>
                            <td>
                                @usuario.Nombres
                            </td>
                            <td>
                                @usuario.Apellidos
                            </td>
                            <td>
                                @usuario.RolId
                            </td>
                            <td>
                                @usuario.Pais
                            </td>
                            <td>
                                <a asp-page="ActualizarUsuario" asp-route-id="@usuario.id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                                <button class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>



</div>
