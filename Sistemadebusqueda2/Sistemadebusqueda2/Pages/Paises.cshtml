@page
@model Sistemadebusqueda2.Pages.PaisesModel
@{
}
<div class="row">
    <div class="col-md-6">
        <h3>
            Listado Paises
        </h3>
    </div>
    <div class="col-md-6">
        <a asp-page="NuevoPais" class="btn btn-primary float-right"><i class="bi bi-person-plus"></i> Nuevo</a>
    </div>

</div>


<hr />
<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nombre usuario
                    </th>                  
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Pais in Model.Paises)
                {
                    <tr>
                        <td>
                            @Pais.Id
                        </td>
                        <td>
                            @Pais.Nombre
                        </td>
                        <td>
                            <a asp-page="ActualizarPais" asp-route-id="@Pais.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Editar Pais"><i class="bi bi-pencil-square"></i></a>
                            <a asp-page="EliminarPais" asp-route-id="@Pais.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar Pais"><i class="bi bi-trash"></i></a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>